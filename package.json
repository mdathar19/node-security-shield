{
  "name": "node-security-shield",
  "version": "1.0.0",
  "description": "Comprehensive Node.js security middleware package with suspicious activity monitoring and standard security protections",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:specific": "jest --testNamePattern",
    "test:integration": "jest __tests__/integration.test.js",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:security": "jest __tests__/SecurityShield.test.js",
    "test:monitor": "jest __tests__/SuspiciousActivityMonitor.test.js",
    "test:utils": "jest __tests__/SecurityUtils.test.js",
    "lint": "eslint lib/ __tests__/",
    "lint:fix": "eslint lib/ __tests__/ --fix",
    "build": "npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix"
  },
  "keywords": [
    "security",
    "middleware",
    "express",
    "nodejs",
    "cybersecurity",
    "suspicious-activity",
    "helmet",
    "cors",
    "ip-validation",
    "xss-protection",
    "sql-injection-protection",
    "testing",
    "jest"
  ],
  "author": "Md Athar <mdathar19@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdathar19/node-security-shield.git"
  },
  "bugs": {
    "url": "https://github.com/mdathar19/node-security-shield/issues"
  },
  "homepage": "https://github.com/mdathar19/node-security-shield#readme",
  "dependencies": {
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-mongo-sanitize": "^2.2.0",
    "compression": "^1.7.4",
    "validator": "^13.11.0"
  },
  "peerDependencies": {
    "express": ">=4.18.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "express": "^4.18.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "lib/",
    "index.js",
    "index.d.ts",
    "README.md",
    "LICENSE",
    "jest.config.js"
  ]
}